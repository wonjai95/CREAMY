<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!--
	작성자 : 장현정
	작성일 : 2021-09-21
	회원 정보에서 사용하는 mapper
-->
  
  <mapper namespace="com.spring.Creamy_CRM.Host_dao.CRMuserDAO">
  
  	<!-- 전체 회원 정보 리스트 출력 -->
  	<select id="printUsers" resultType="com.spring.Creamy_CRM.VO.userVO">
  		SELECT *
  		  FROM user_tbl
  	</select>
  	
  	<!-- 선택된 회원 정보 출력 -->
  	<select id="getUserInfo" parameterType="String" resultType="com.spring.Creamy_CRM.VO.userVO">
  		SELECT *
  		  FROM user_tbl
  		 WHERE user_code=#{user_code}
  	</select>
  	
  	<!-- 회원 정보 수정 -->
  	<update id="updateUser" parameterType="com.spring.Creamy_CRM.VO.userVO">
  		UPDATE user_tbl
		   SET user_name=#{user_name}, user_gender=#{user_gender}, user_birth=#{user_birth}, user_age=#{user_age}, user_email=#{user_email}, zipcode=#{zipcode}, user_address=#{user_address}, user_ph=#{user_ph}, join_date=#{join_date}, expire_date=#{expire_date}
		 WHERE user_code=#{user_code}
  	</update>
  	
  	
  	
  </mapper>